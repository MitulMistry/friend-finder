<div class="user-show">
  <h1><%= @user.username %></h1>
  <%= user_profile_avatar(@user) %>
  <h4>Bio</h4>
  <p><%= @user.bio %></p>

  <% if !@user.interests.empty? %>
  <h4>Interests</h4>
  <p>
  <% @user.interests.each do |interest| %>
    <%= link_to interest.name, interest, class: "btn-green-small" %>
  <% end %>
  </p>
  <% end %>

  <% if logged_in?%>
    <% if @user != current_user %>
      <p><%= link_to "Send a Message", new_user_message_path(@user), class: "btn-dark" %></p>
    <% else %>
      <p><%= link_to "Edit Profile", edit_user_path(@user), class: "btn-dark" %></p>
    <% end %>
  <% end %>
</div>