<div class="jumbotron">
  <h1>Make Some New Friends.</h1>
  <h2>Find new friends to message and connect with.</h2>
  <p>
  <% if !logged_in? %>
    <%= link_to "Get Started", signup_path, class: "btn-dark" %>
  <% end %>
  <%= link_to "Browse Users", users_path, class: "btn-light" %>
  </p>

  <div class="users">
  <% @users.each do |user| %>
    <div class="index-user">
      <%= link_to (user_card_avatar(user)), user_path(user) %>
      <p><%= link_to user.username, user_path(user) %></p>
    </div>
  <% end %>
  </div>
</div>