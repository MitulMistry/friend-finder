<div class="message-card">
<% if message.sender != current_user %>
  <h4>From: <%= link_to message.sender.username, message.sender %></h4>  
<% else %>
  <h4>To: <%= link_to message.recipient.username, message.recipient %></h4>
<% end %>
  <p><%= message.body %></p>
  <p><%= readable_datetime(message.created_at) %></p>
<% if message.sender != current_user %>
  <p><%= link_to "Reply", new_user_message_path(message.sender), class: "btn-dark-small" %></p>
<% else %>
  <p><%= link_to "Reply", new_user_message_path(message.recipient), class: "btn-dark-small" %></p>
<% end %>
</div>