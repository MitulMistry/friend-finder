<h1>Login</h1>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag "Username" %>
    <%= text_field_tag :username %>
  </div>

  <div class="form-group">
    <%= label_tag "Password" %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %>